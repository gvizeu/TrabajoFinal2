<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gonza.trabajofinal2.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail"
        />

    <EditText
        android:id="@+id/field_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/field_password"
        android:layout_alignEnd="@+id/email_create_account_button"
        android:layout_alignLeft="@+id/email_sign_in_button"
        android:layout_alignRight="@+id/email_create_account_button"
        android:layout_alignStart="@+id/email_sign_in_button"
        android:layout_marginBottom="44dp"
        android:hint="Nombre de usuario" />

    <EditText
        android:id="@+id/field_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_sign_in_button"
        android:layout_alignEnd="@+id/field_email"
        android:layout_alignLeft="@+id/email_sign_in_button"
        android:layout_alignRight="@+id/field_email"
        android:layout_alignStart="@+id/email_sign_in_button"
        android:layout_marginBottom="39dp"
        android:hint="ContraseÃ±a" />

    <Button
        android:id="@+id/email_sign_in_button"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_create_account_button"
        android:layout_alignLeft="@+id/email_create_account_button"
        android:layout_alignStart="@+id/email_create_account_button"
        android:layout_marginBottom="61dp"
        android:text="Iniciar sesion" />

    <Button
        android:id="@+id/email_create_account_button"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="95dp"
        android:text="Resgistrate!" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_below="@+id/detail"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/common_full_open_on_phone" />


</RelativeLayout>
